@using Microsoft.AspNetCore.Identity
@if (User.Identity.IsAuthenticated)
{
    <ul class="nav navbar-nav">
        <li>@Html.ActionLink("Objects", "Index", "Objects")</li>
        <li>@Html.ActionLink("Developer", "Index", "Developer")</li>
    </ul>
    using (Html.BeginForm("LogOff", "UserAccount", FormMethod.Post, new { id = "logoutForm", @class = "navbar-right" }))
    {

        <ul class="nav navbar-nav navbar-right">
            <li>
                @Html.ActionLink("Hello, " + User.Identity.Name + "!", "Index", "ScrumPlatform", routeValues: null, htmlAttributes: new { title = "Manage" })
            </li>
            <li><a href="javascript:document.getElementById('logoutForm').submit()">Log off</a></li>
        </ul>
    }
}
else
{
    <ul class="nav navbar-nav navbar-right">
        <li>@Html.ActionLink("Register", "Register", "UserAccount", routeValues: null, htmlAttributes: new { id = "registerLink" })</li>
        <li>@Html.ActionLink("Log in", "Login", "UserAccount", routeValues: null, htmlAttributes: new { id = "loginLink" })</li>
    </ul>
}
